<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Access.ScreenSaveFragment">

    <FrameLayout
        android:id="@+id/fl_clock"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextClock
            android:layout_gravity="center"
            android:format12Hour="yyyy-MM-dd\nHH:mm:ss"
            android:format24Hour="yyyy-MM-dd\nHH:mm:ss"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_meeting_curr"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="当前会议"
            android:textColor="@color/white"
            android:textSize="36dp" />

        <FrameLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/shape_employ_button">

            <LinearLayout
                android:id="@+id/ll_meeting_info_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="会议名称:"
                        android:textColor="@color/white"
                        android:textSize="27dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="会议时间:"
                        android:textColor="@color/white"
                        android:textSize="27dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="会议状态:"
                        android:textColor="@color/white"
                        android:textSize="27dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_curr_meeting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="26dp" />

                    <TextView
                        android:id="@+id/tv_curr_meeting_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="2019-08-01 19:20  ~  2019-08-01 19:20"
                        android:textColor="@color/white"
                        android:textSize="23dp" />

                    <TextView
                        android:id="@+id/tv_curr_meeting_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="26dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>