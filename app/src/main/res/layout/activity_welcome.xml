<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_activity"
    android:orientation="vertical"
    android:padding="15dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_main_logo"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/logo_yunbiao" />

        <TextView
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/tv_main_abbname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:letterSpacing="0.1"
            android:layout_gravity="center"
            android:text="云标智能会议"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <TextClock
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="2019/08/02 17:20"
            android:textColor="@color/white"
            android:textSize="32dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_code"
                android:scaleType="centerInside"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@mipmap/frame_qrcode" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:text="了解会议详情"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>

        <FrameLayout
            android:padding="5dp"
            android:background="@mipmap/frame_face"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">
            <com.yunbiao.yb_smart_meeting.faceview.FaceView
                android:id="@+id/face_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.wang.avi.AVLoadingIndicatorView
                android:visibility="gone"
                android:id="@+id/av_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:padding="5dp"
                android:background="@mipmap/img_noface"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_person_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/aiv_person_loading"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_record_container"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="260dp"/>

    <FrameLayout
        android:id="@+id/fl_introduce_container"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>